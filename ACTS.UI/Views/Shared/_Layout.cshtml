@{
    var culture = CultureHelper.GetImplementedCulture(UICulture);
    //var lang = CultureHelper.GetCurrentNeutralCulture();
}
@helper LanguageLinkBuilder(string culture, string currentCulture)
{
    {
		@:<a
		if (culture == currentCulture)
		{
		   @:class="selectedLanguage"
		}
		@:href="@Url.Action("SetCulture", "Home", new { culture = culture, returnUrl = Url.Action() })">@culture</a>
	}
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" lang="@CultureHelper.GetCurrentNeutralCulture()" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/css/MainPage.css" rel="stylesheet" />
</head>
<body style="height:100%">         
    
        <div id="carousel" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/Images/actsSlide1.jpg" alt="First slide">
                </div>
                <div class="item">
                    <img src="~/Content/Images/actsSlide2.jpg" alt="Second slide">
                </div>
                <div class="item">
                    <img src="~/Content/Images/actsSlide3.jpg" alt="Third slide">
                </div>
                <div class="item">
                    <img src="~/Content/Images/actsSlide4.jpg" alt="Third slide">
                </div>
            </div>
        </div> 
    <div class="nav-container">
        <nav class="menu navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/Images/logo.png" style="max-height:100%" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @{
                            if (ViewBag.CurrentPage != "main")
                            {
                                <li><a href="@Url.Action("Index", "Home")">@GlobalRes.Main</a></li>
                            }
                        }
                        <!--Генерация панели навигации из PartialView PanelSections-->
                        @Html.Partial("PanelSections")
                    </ul>
                    <!--Выбор локализации -->
                    <ul style="margin-right:5px" class="nav navbar-nav navbar-right">
                        <li>
                            @{Html.RenderAction("AuthenticationLink", new { controller = "Account" }); }
                        </li>
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                using (Html.BeginForm("Logout", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                }
                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    @GlobalRes.Logout
                                </a>

                            }
                        </li>
                        @foreach (var lang in CultureHelper.Cultures)
                        {
                            <li class="@lang
                            @if (culture == lang) {
								 @:selectedLanguage
							}
                        ">
                                <a href="@Url.Action("SetCulture", "Home", new {
                                    culture = lang,
                                    returnUrl = Url.Action()
                                })"></a>
                            </li>
                        }
                    </ul>
                    <!--Поиск-->
                    @*<form class="navbar-form navbar-right">
                            <input type="text" class="form-control" placeholder="@GlobalRes.Search">
                        </form>*@
                </div>
            </div>
        </nav>
    </div>
        <div class="container fluid" style="height:100%;background-color:rgba(255, 255, 255, 0.4);">
            @RenderBody()

            @if (ViewBag.CurrentPage != "main") { Html.RenderAction("FooterStringUncos", "News"); }
            else { @Html.Partial("Footer"); }
            
        </div>
    <script src="~/Scripts/jquery-2.2.0.js"></script> 
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        $(document).ready(function () {

            var menu = $('.menu');
            var origOffsetY = menu.offset().top;

            function scroll() {
                if ($(window).scrollTop() >= origOffsetY) {
                    $('.menu').addClass('navbar-fixed-top');
                    $('.menu').removeClass('navbar-static-top'); 
                } else {
                    $('.menu').removeClass('navbar-fixed-top');
                    $('.menu').addClass('navbar-static-top'); 
                }


            }

            document.onscroll = scroll;

        });
        $(function () {
            $(window).on("load resize", function () {
                $(".fill-screen").css("height", window.innerHeight);
            });
        });
    </script>
</body>
</html>



