<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1" lang="@CultureHelper.GetCurrentNeutralCulture()" />
	<title>@ViewBag.Title</title>
	<link rel="icon" href="/favicon.ico" type="image/x-icon" />
	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
	<nav class="navbar navbar-default navbar-static-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="@Url.Action("Index", "Home")">
					<img src="~/Content/Images/logo.png" style="max-height:100%" />
				</a>
			</div>

			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					@{
						if (ViewBag.CurrentPage != "main")
						{
							<li><a href="@Url.Action("Index", "Home")">@GlobalRes.Main</a></li>
						}
					}				
					<li class="dropdown">
						<a href="@Url.Action("About", "Department")" class="dropdown-toggle" data-toggle="dropdown">@GlobalRes.Department<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("About", "Department")">@GlobalRes.About</a></li>
                            <li><a href="@Url.Action("History", "Department")">@GlobalRes.History</a></li>
                            <li><a href="@Url.Action("TeachingStaff", "Department")">@GlobalRes.TeachingStaff</a></li>
                            <li><a href="@Url.Action("ServicePersonell", "Department")">@GlobalRes.ServicePersonell</a></li>
                            <li><a href="@Url.Action("OurGraduates", "Department")">@GlobalRes.OurGraduates</a></li>
                            <li><a href="@Url.Action("Placement", "Department")">@GlobalRes.Placement</a></li>
                            
                        </ul>
					</li>
					<li><a href="#contact">Contact</a></li>
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "ForStudent")" class="dropdown-toggle" data-toggle="dropdown">@GlobalRes.ForStudent<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Specialties", "ForStudent")">@GlobalRes.Specialties</a></li>
                            <li><a href="@Url.Action("StudentRating", "ForStudent")">@GlobalRes.StudentRating</a></li>
                            <li><a href="@Url.Action("UsefulLinks", "ForStudent")">@GlobalRes.UsefulLinks</a></li>
                            <li><a href="@Url.Action("Schedule", "ForStudent")">@GlobalRes.Schedule</a></li>
                            <li><a href="@Url.Action("Postgraduates", "ForStudent")">@GlobalRes.Postgraduate</a></li>
                            <li><a href="@Url.Action("CoursesAndProbations", "ForStudent")">@GlobalRes.CoursesAndProbations</a></li>
                        </ul>
                    </li>
				</ul>

				<ul class="nav navbar-nav navbar-right">
					@foreach (var lang in CultureHelper.Cultures)
					{
						@:<li
							if (culture == lang)
							{
								@: class="@(lang) selectedLanguage"
							}
                            @:class="@(lang)"    
						@:> <a href="@Url.Action("SetCulture", "Home", new { culture = lang, returnUrl = Url.Action() })" > </a></li>
					}
				</ul>

				<form class="navbar-form navbar-right">
					<input type="text" class="form-control" placeholder="@GlobalRes.Search">
				</form>
			</div><!--/.nav-collapse -->
		</div>
	</nav>

	<div class="container">
		@RenderBody()
			
		@{Html.RenderAction("FooterStringUncos", "News");}
	</div>
	<script src="~/Scripts/jquery-2.1.4.js"></script>
	<script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
