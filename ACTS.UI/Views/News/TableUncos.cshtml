<div class="row">
	<div class="col-xs-12">
		<div class="box box-default">
			<div class="box-header">
				<h3 class="box-title">News</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table id="dataTablePlagin" class="table table-bordered table-striped table-hover" width="100%">
					<thead>
						<tr>
							<th>Id</th>
							<th>Title</th>
							<th>Create</th>
							<th>Modified</th>
							<th>Image</th>
							<th>Content</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@item.NewsID
								</td>
								<td>
									@item.Title
								</td>
								<td>
									@item.Create.Value.ToLocalTime().ToShortDateString()
								</td>
								<td>
									@if (item.Modified.HasValue)
									{
										@item.Modified.Value.ToLocalTime().ToShortDateString()
									} else
									{
										@:None
										}
								</td>
								<td>
									@if (item.ImageData == null)
									{
										@:None
										} else
									{
										<img width="100" height="100" src="@Url.Action("GetImage", "News", new { item.NewsID })" />
									}
								</td>
								<td>
									@Html.Raw(item.Content)
								</td>
								<td>
									@using (Html.BeginForm("Delete", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
									{
										@Html.Hidden("NewsID", item.NewsID)
										<div class="btn-group-vertical">
											<a href="@Url.Action("Edit", "News", new { item.NewsID })" class="btn btn-default"><i class="fa fa-edit ">&nbsp;Edit</i></a>
											<a href="@Url.Action("PageNews", "News", new { item.NewsID })" class="btn btn-default"><i class="fa fa-home ">&nbsp;On Main</i></a>
											<button class="btn btn-default" type="submit"><i class="fa fa-remove ">&nbsp;Delete</i></button>
										</div>
									}
								</td>
							</tr>
							}
					</tbody>
					<tfoot>
						<tr>
							<th>Id</th>
							<th>Title</th>
							<th>Create</th>
							<th>Modified</th>
							<th>Image</th>
							<th>Content</th>
							<th>Actions</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.box-body -->
			<div class="box-footer">
				<a href="@Url.Action("Create", "News")" class="btn btn-primary fa fa-edit">&nbsp;Create new News</a>
			</div>
