@model ACTS.UI.Models.ResetPasswordViewModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>@GlobalRes.ResetPassword</title>
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	@Styles.Render("~/Content/css")
	<!-- Theme style -->
	<link href="@Url.Content("~/Content/AdminLTE.css")" rel="stylesheet" />
	<link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" />

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="login-logo">
			<a href="@Url.Action("Index","Home")"><b>@GlobalRes.ACTS</b>@GlobalRes.KPI</a>
		</div>
		<!-- /.login-logo -->
		<div class="login-box-body">
			<h3 class="login-box-msg">@GlobalRes.ResetPasswordMsg</h3>


			@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary(true, "", new { @class = "text-red" })
				@Html.HiddenFor(m => m.UserId)
				@Html.HiddenFor(m => m.Token)

				<div class="form-group has-feedback">
					@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = GlobalRes.NewPassword })
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
				@Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-red" }, "p")

				<div class="form-group has-feedback">
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = GlobalRes.ConfirmPassword })
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
				@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red" }, "p")

				<div class="row">
					<div class="col-xs-12">
						<button type="submit" id="button-save" class="btn btn-primary pull-right btn-flat">@GlobalRes.Save</button>
					</div>
				</div>
			}
		</div>
		<!-- /.login-box-body -->
	</div>
	<!-- /.login-box -->
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
</body>



</html>