@{
	Layout = null;
	bool returnToAdmin = string.IsNullOrWhiteSpace(ViewBag.ReturnUrl) ? false : ViewBag.ReturnUrl.ToLower().StartsWith("/admin");
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Forgot password</title>
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	@Styles.Render("~/Content/css")
	<!-- Theme style -->
	<link href="~/Content/AdminLTE.css" rel="stylesheet" />
	<link href="~/Content/Login.css" rel="stylesheet" />

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="login-logo">
			@if (returnToAdmin)
			{
				<a href="@Url.Action("Dashboard","Admin", new { area = "Admin" })"><b>Admin</b>ACTS</a>
			}
			else
			{
				<a href="@Url.Action("Index","Home")"><b>ACTS</b>KPI</a>
			}
		</div>
		<!-- /.login-logo -->
		<div class="login-box-body">
			<h4 class="login-box-msg text-bold">Check your email</h4>
			<p class="login-box-msg">We just sent an email to you with a link to reset your password!</p>
		</div>
		<!-- /.login-box-body -->
	</div>
	<!-- /.login-box -->
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
</body>
</html>