@model IEnumerable<ACTS.Core.Entities.Employee>

@{
	ViewBag.Title = "Table of Employee";
	ViewBag.CurrentTreeView = "Tables";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link type="text/css" href="~/Content/datatables.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/datatables.min.js"></script>

<script type="text/javascript">
	$(document).ready(function () {
		var table = $('#dataTablePlagin').DataTable({
			scrollX: true,
			scrollY: false,
			scrollCollapse: true,
			columns: [
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-head-center" },
		   { className: "dt-center" }
			],
			lengthMenu: [
			[5, 10, 25, 50, -1],
			['5', '10', '25', '50', 'All']
			]
		});
	});
</script>

<div class="row">
	<div class="col-xs-12">
		<div class="box box-default">
			<div class="box-header">
				<h3 class="box-title">Employees</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table id="dataTablePlagin" class="table table-bordered table-striped table-hover" width="100%">
					<thead>
						<tr>
							<th>Id</th>
							<th>FullName</th>
							<th>Position</th>
							<th>Image</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@item.EmployeeID
								</td>
								<td>
									@item.FullName
								</td>
								<td>
									@item.Position
								</td>
								<td>
									@if (item.Photo == null)
									{
										@:None
										} else
									{
										<img width="100" height="100" src="@Url.Action("GetImage", "Employee", new { item.EmployeeID })" />
									}
								</td>
								<td>
									@using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
									{
										@Html.Hidden("EmployeeID", item.EmployeeID)
										<div class="btn-group-vertical">
											<a href="@Url.Action("Edit", "Employee", new { item.EmployeeID })" class="btn btn-default"><i class="fa fa-edit ">&nbsp;Edit</i></a>
											<a href="@Url.Action("PageNews", "Employee", new { item.EmployeeID })" class="btn btn-default"><i class="fa fa-home ">&nbsp;On Main</i></a>
											<button class="btn btn-default" type="submit"><i class="fa fa-remove ">&nbsp;Delete</i></button>
										</div>
									}
								</td>
							</tr>}
					</tbody>
					<tfoot>
						<tr>
							<th>Id</th>
							<th>FullName</th>
							<th>Position</th>
							<th>Image</th>
							<th>Actions</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.box-body -->
			<div class="box-footer">
				<a href="@Url.Action("Create", "Employee")" class="btn btn-primary fa fa-edit">&nbsp;Create new Employee</a>
			</div>
		</div>
		<!-- /.box -->
	</div>
</div>
