@model ACTS.Core.Entities.News

@{
	ViewBag.CurrentPage = Path.GetFileNameWithoutExtension(Server.MapPath(VirtualPath));
	ViewBag.Title = GlobalRes.EditNews;
}

@section Styles{
	@Styles.Render("~/Content/css/bootstrap-fileinput")
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval-admin")
	@Scripts.Render("~/bundles/expressive")
	@Scripts.Render(GlobalRes.tinymcePath)
	@Scripts.Render(GlobalRes.fileinputPath)
}

<div class="row">
	<div class="col-xs-12">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">@GlobalRes.Redact @Model.Title</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			@using (Html.BeginForm("Edit", "News", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
			{
				<div class="box-body">
					@Html.AntiForgeryToken()

					@Html.ValidationSummary(true, "", new { @class = "text-red" })
					@Html.HiddenFor(model => model.NewsId)
					@Html.HiddenFor(model => model.ImageMimeType)
					@Html.HiddenFor(model => model.ImageData)

					<div class="form-group">
						@Html.LabelFor(model => model.Title, new { @class = "col-md-3 col-lg-2 control-label" })
						<div class="col-md-8 col-lg-9">
							@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-red", placeholder = GlobalRes.Title }, "p")
						</div>
					</div>

					<div class="form-group">
						@Html.LabelFor(model => model.ImageData, new { @class = "col-md-3 col-lg-2 control-label" })
						<div class="col-md-8 col-lg-9">
							@if (Model.ImageData == null)
							{
								<p class="form-control-static">
									@GlobalRes.None
								</p>
							} else
							{
								<img alt="News image" class="img-thumbnail" style="max-width:100%;max-height:400px" src="@Url.Action("GetImage", "News", new { area = "", Model.NewsId })" />
							}
						</div>
					</div>

					<div class="form-group">
						@Html.LabelFor(model => model.ImageData, "Upload new image:", new { @class = "col-md-3 col-lg-2 control-label" })
						<div class="col-md-8 col-lg-9">
							<input id="input-image" class="file-loading form-control" accept="image/*" type="file" name="Image" />
						</div>
					</div>

					<div class="form-group">
						@Html.LabelFor(model => model.Content, new { @class = "col-md-3 col-lg-2 control-label" })
						<div class="col-md-8 col-lg-9">
							@Html.TextAreaFor(model => model.Content, new { @class = "tinymceEditor form-control" })
							@Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-red", placeholder = GlobalRes.Content }, "p")
						</div>
					</div>

				</div>
					<!-- /.box-body -->

				<div class="box-footer">
					<button type="submit" class="btn btn-primary">
						<i class="fa fa-edit"></i>&nbsp;@GlobalRes.Save
					</button>
					<a type="button" class="btn btn-default pull-right" href="@Url.Action("Table", "News")">
						<i class="fa fa-undo"></i>&nbsp;@GlobalRes.CancelAndReturnToTable
					</a>
				</div>
			}
			<!-- form end -->
		</div>
	</div>
</div>
