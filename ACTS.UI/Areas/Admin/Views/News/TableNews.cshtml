@model IEnumerable<ACTS.Core.Entities.News>

@{
	ViewBag.CurrentPage = Path.GetFileNameWithoutExtension(Server.MapPath(VirtualPath));
	ViewBag.Title = "Table of news";
	ViewBag.CurrentTreeView = "Tables";
}

@section Styles{
	@Styles.Render("~/Content/css/datatables")
}

@section Scripts {
	@Scripts.Render("~/bundles/datatables")
	<script src="~/Scripts/Admin/News/tableUncos.js"></script>
}

<div class="row">
	<div class="col-xs-12">
		<div class="box box-primary">
			<div class="box-header">
				<h3 class="box-title">Uncos</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table id="dataTablePlagin" class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th>Id</th>
							<th>Title</th>
							<th>Create</th>
							<th>Modified</th>
							<th>Image</th>
							<th>Content</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@item.NewsId
								</td>
								<td>
									@item.Title
								</td>
								<td>
									@item.Create.Value.ToLocalTime().ToShortDateString()
								</td>
								<td>
									@if (item.Modified.HasValue)
									{
										@item.Modified.Value.ToLocalTime().ToShortDateString()
									} else
									{
										@:None
									}
								</td>
								<td>
									@if (item.ImageData == null)
									{
										@:None
										} else
									{
										<img alt="News image" width="100" height="100" src="@Url.Action("GetImage", "News", new { area = "", item.NewsId })" />
									}
								</td>
								<td>
									@Html.Raw(item.Content)
								</td>
								<td>
									@using (Html.BeginForm("Delete", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
									{
										@Html.AntiForgeryToken()
										@Html.Hidden("NewsID", item.NewsId)
										<ul class="list-unstyled">
											<li><a href="@Url.Action("Edit", "News", new { item.NewsId })" class="btn btn-link"><i class="fa fa-edit">&nbsp;Edit</i></a></li>
											<li><a href="@Url.Action("PageNews", "News", new { item.NewsId })" class="btn btn-link"><i class="fa fa-home">&nbsp;On Main</i></a></li>
											<li><button class="btn btn-link" type="submit"><i class="fa fa-remove text-danger">&nbsp;Delete</i></button></li>
										</ul>
									}
								</td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Id</th>
							<th>Title</th>
							<th>Create</th>
							<th>Modified</th>
							<th>Image</th>
							<th>Content</th>
							<th>Actions</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.box-body -->
			<div class="box-footer">
				<a href="@Url.Action("Create", "News")" class="btn btn-primary"><i class="fa fa-fw fa-pencil"></i>&nbsp;Create new news</a>
			</div>
		</div>
		<!-- /.box -->
	</div>
</div>
