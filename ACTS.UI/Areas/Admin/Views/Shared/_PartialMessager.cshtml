@using ACTS.UI.Areas.Admin.Models

@helper alert(string title, string body, string divClass, string iClass)
{
    <div class="alert @divClass alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa @iClass"></i> @title</h4>
        @body
    </div>
}

@if (TempData.ContainsKey(Messenger.Name))
{
    foreach (var message in TempData[Messenger.Name] as Messenger)
    {
        switch (message.Type)
        {
            case MessageType.Danger:
                @alert(message.Title, message.Body, "alert-danger", "fa-ban")
            break;
            case MessageType.Warning:
                @alert(message.Title, message.Body, "alert-warning", "fa-warning")
            break;
            case MessageType.Info:
                @alert(message.Title, message.Body, "alert-info", "fa-info")
            break;
            case MessageType.Success:
                @alert(message.Title, message.Body, "alert-success", "fa-check")
            break;
        }
    }
}
