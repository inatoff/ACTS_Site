@model IEnumerable<ACTS.Core.Entities.Teacher>

@{
	ViewBag.Title = "Table of Teacher";
	ViewBag.CurrentTreeView = "Tables";
}

@helper SocialLink(string text, string url, string classLink, string classI) {
	if (!string.IsNullOrEmpty(url))
	{
		<a class="btn btn-sm btn-social @classLink" href="@url">
			<i class="fa @classI"></i>@text
		</a>
	} else {
		<a class="btn btn-sm btn-social disabled @classLink">
			<i class="fa @classI"></i>@text
		</a>
	}
}

<link type="text/css" href="~/Content/datatables.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/datatables.min.js"></script>

<script type="text/javascript">
	$(document).ready(function () {
		var table = $('#dataTablePlagin').DataTable({
			scrollX: true,
			scrollY: false,
			scrollCollapse: true,
			columns: [
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-center" },
		   { className: "dt-head-center" },
		   { className: "dt-center" }
			],
			lengthMenu: [
			[5, 10, 25, 50, -1],
			['5', '10', '25', '50', 'All']
			]
		});
	});
</script>

<div class="row">
	<div class="col-xs-12">
		<div class="box box-default">
			<div class="box-header">
				<h3 class="box-title">Teachers</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table id="dataTablePlagin" class="table table-bordered table-striped table-hover" width="100%">
					<thead>
						<tr>
							<th>Id</th>
							<th>FullName</th>
							<th>Position</th>
							<th>Degree</th>
							<th>EMail</th>
							<th>Social links</th>
							<th>Image</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@item.TeacherID
								</td>
								<td>
									@item.FullName
								</td>
								<td>
									@item.Position
								</td>
								<td>
									@item.Degree
								</td>
								<td>
									@item.EMail
								</td>
								<td>
									<div class="btn-group-vertical">
										@SocialLink("Intellect", item.Intellect, "btn-info", "fa-info")
										@SocialLink("Vk", item.VkID, "btn-vk", "fa-vk")
										@SocialLink("Twitter", item.Twitter, "btn-twitter", "fa-twitter")
										@SocialLink("Facebook", item.FaceBook, "btn-facebook", "fa-facebook")
									</div>
								</td>
								<td>
									@if (item.Photo == null)
									{
										@:None
									} else
									{
										<img width="100" height="100" src="@Url.Action("GetImage", "Teacher", new { area = "", item.TeacherID })" />
									}
								</td>
								<td>
									@using (Html.BeginForm("Delete", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
									{
										@Html.Hidden("TeacherID", item.TeacherID)
										<div class="btn-group-vertical">
											<a href="@Url.Action("Edit", "Teacher", new { item.TeacherID })" class="btn btn-default">
												<i class="fa fa-edit ">&nbsp;Edit</i>
											</a>
											<a href="@Url.Action("PageNews", "Employee", new { item.TeacherID })" class="btn btn-default">
												<i class="fa fa-home ">&nbsp;On Main</i>
											</a>
											<button class="btn btn-default" type="submit"><i class="fa fa-remove ">&nbsp;Delete</i></button>
										</div>
									}
								</td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Id</th>
							<th>FullName</th>
							<th>Position</th>
							<th>Degree</th>
							<th>EMail</th>
							<th>Social links</th>
							<th>Image</th>
							<th>Actions</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.box-body -->
			<div class="box-footer">
				<a href="@Url.Action("Create", "Teacher")" class="btn btn-primary fa fa-edit">&nbsp;Create new Teacher</a>
			</div>
		</div>
		<!-- /.box -->
	</div>
</div>
