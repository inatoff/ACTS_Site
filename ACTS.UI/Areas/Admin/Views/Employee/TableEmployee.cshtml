@model IEnumerable<ACTS.Core.Entities.Employee>

@{
	ViewBag.CurrentPage = Path.GetFileNameWithoutExtension(Server.MapPath(VirtualPath));
	ViewBag.Title = "Table of employees";
	ViewBag.CurrentTreeView = "Tables";
}

@section Styles{
	@Styles.Render("~/Content/css/datatables")
}

@section Scripts {
	@Scripts.Render("~/bundles/datatables")
	<script src="~/Scripts/Admin/Employee/tableEmployee.js"></script>
}

<div class="row">
	<div class="col-xs-12">
		<div class="box box-primary">
			<div class="box-header">
				<h3 class="box-title">Employees</h3>
				<div class="box-tools pull-right">
					<a href="@Url.Action("Create", "Employee")" class="label label-primary"><i class="fa fa-fw fa-pencil"></i>&nbsp;Create new employee</a>
				</div>
			</div>

			<div class="box-body">
				<table id="dataTablePlagin" class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th>Id</th>
							<th>Full name</th>
							<th>Position</th>
							<th>Image</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@item.EmployeeId
								</td>
								<td>
									@item.FullName
								</td>
								<td>
									@item.Position
								</td>
								<td>
									@if (item.Photo == null)
									{
										@:None
									}
									else
									{
										<img alt="Employee image" width="100" height="100" src="@Url.Action("GetImage", "Employee", new { area = "", item.EmployeeId })" />
									}
								</td>
								<td>
									@using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
									{
										@Html.AntiForgeryToken()
										@Html.Hidden("EmployeeId", item.EmployeeId)
										<ul class="list-unstyled">
											<li><a href="@Url.Action("Edit", "Employee", new { item.EmployeeId })" class="btn btn-link"><i class="fa fa-edit ">&nbsp;Edit</i></a></li>
											<li><a href="@Url.Action("PageNews", "Employee", new { item.EmployeeId })" class="btn btn-link"><i class="fa fa-home ">&nbsp;On Main</i></a></li>
											<li><button class="btn btn-link" type="submit"><i class="fa fa-remove text-danger">&nbsp;Delete</i></button></li>
										</ul>
									}
								</td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>Id</th>
							<th>Full name</th>
							<th>Position</th>
							<th>Image</th>
							<th>Actions</th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- /.box-body -->
		</div>
		<!-- /.box -->
	</div>
</div>
