@model ACTS.Core.Entities.Employee

@{
	ViewBag.CurrentPage = Path.GetFileNameWithoutExtension(Server.MapPath(VirtualPath));
	ViewBag.Title = "Edit Employee";
}

<div class="row">
	<div class="col-xs-12">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">
					@if (string.IsNullOrEmpty(Model.FullName))
					{
						@:Create Employee
					} else
					{
						@:Redact @Model.FullName
					}
				</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			@*TODO Rustam помоги сделать что бы когда оно проверяет и там неправильные даные то виглядела как http://bootstrap-3.ru/css.php#forms-control-validation*@
			@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
			{
				<div class="box-body">
					@Html.AntiForgeryToken()

					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => Model.EmployeeID)
					@Html.HiddenFor(model => Model.Photo)
					@Html.HiddenFor(model => Model.PhotoMimeType)

					<div class="form-group">
						@Html.LabelFor(model => Model.FullName, "FullName")
						@Html.ValidationMessageFor(model => Model.FullName, "", new { @class = "text-danger" })
						@Html.EditorFor(model => Model.FullName, new { htmlAttributes = new { @class = "form-control" } })
					</div>

					<div class="form-group">
						@Html.LabelFor(model => Model.Position, "Position")
						@Html.ValidationMessageFor(model => Model.Position, "", new { @class = "text-danger" })
						@Html.EditorFor(model => Model.Position, new { htmlAttributes = new { @class = "form-control" } })
					</div>

					<div class="form-group">
						@Html.LabelFor(model => Model.Photo, "Image")
						<div>
							@if (Model.Photo == null)
							{
								@:None
							} else
							{
								<img class="img-thumbnail" style="max-width:100%" src="@Url.Action("GetImage", "Employee", new { area = "", Model.EmployeeID })" />
							}
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(model => Model.Photo, "Upload new image:")
						<input type="file" name="Image" />
					</div>
				</div>
					<!-- /.box-body -->

					<div class="box-footer">
						<button type="submit" class="btn btn-primary">
							<i class="fa fa-save"></i>&nbsp;Save
						</button>
						<a type="button" class="btn btn-default pull-right" href="@Url.Action("Table", "Employee")">
							<i class="fa fa-times"></i>&nbsp;Cancel and return to Table
						</a>
					</div>
				}
			<!-- form end -->
		</div>
	</div>
</div>

